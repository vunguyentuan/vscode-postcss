{
  "name": "vscode-postcss",
  "version": "2.0.1",
  "displayName": "PostCSS Intellisense and Highlighting",
  "description": "Syntax highlighting and intellisense for PostCSS",
  "publisher": "vunguyentuan",
  "engines": {
    "vscode": "^1.63.0",
    "node": "^16.0.0"
  },
  "keywords": [
    "postcss",
    "syntax",
    "highlighting",
    "intellisense",
    "autocomplete"
  ],
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/vunguyentuan/vscode-postcss.git"
  },
  "main": "./dist/index.js",
  "contributes": {
    "configuration": [
      {
        "id": "css",
        "title": "PostCSS",
        "properties": {
          "postcss.validate": {
            "type": "boolean",
            "scope": "resource",
            "default": true,
            "description": "Enables or disables all validations."
          }
        }
      }
    ],
    "languages": [
      {
        "id": "postcss",
        "configuration": "./postcss.language.configuration.json",
        "aliases": [
          "PostCSS",
          "pcss"
        ],
        "extensions": [
          ".css",
          ".pcss",
          ".postcss"
        ],
        "mimetypes": [
          "text/css",
          "text/x-pcss",
          "text/pcss"
        ]
      }
    ],
    "grammars": [
      {
        "scopeName": "source.css.scss",
        "path": "./syntaxes/postcss.tmLanguage.json",
        "language": "postcss"
      },
      {
        "scopeName": "text.html.markdown.css",
        "path": "./syntaxes/text.html.markdown.css.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.css": "postcss"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsup src/index.ts src/server.ts --format cjs --external vscode",
    "dev": "tsup src/index.ts src/server.ts --watch --format cjs --external vscode",
    "clean": "rm -rf dist && rm -rf out && rm -rf .vscode-test",
    "lint": "eslint ./src --ext .ts,.tsx --fix",
    "pretest": "tsc -p ./",
    "deploy": "vsce publish",
    "package": "vsce package --pre-release"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.13",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^2.1.5",
    "mocha": "^10.0.0",
    "tsup": "^6.2.3",
    "typescript": "^4.8.2",
    "vsce": "^2.10.2",
    "vscode-languageclient": "^8.0.2",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1"
  }
}
